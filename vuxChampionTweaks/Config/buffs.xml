<Vux>
    <set xpath="//buff[@name='event_FallenBossSpawnTimed']/@hidden">false</set>
    <setattribute xpath="//buff[@name='event_FallenBossSpawnTimed']" name="showonhud">true</setattribute>
    <setattribute xpath="//buff[@name='event_FallenBossSpawnTimed']" name="icon">ui_sorcery_boss</setattribute>
    <setattribute xpath="//buff[@name='event_FallenBossSpawnTimed']" name="icon_color">255,0,0</setattribute>

    <insertBefore xpath="//buff[@name='buffSorceryManage']/effect_group[@name='CLUSTER: EVENT']">
        <effect_group name="CLUSTER: EVENT TWEAKS">
            <triggered_effect trigger="onSelfDamagedBlock" action="ModifyCVar" cvar="$sorceryChampionSpawnChance" operation="add" value="1">
                <requirement name="TriggerHasTags" tags="cluster"/>
                <requirement name="ItemHasTags" tags="wandHarvest,staff"/>
                <requirement name="RandomRoll" seed_type="Random" min_max="0,5" operation="LTE" value="1"/>
            </triggered_effect>
        </effect_group>
    </insertBefore>

    <set xpath="//buff[@name='buffSorceryManage']/effect_group[@name='CLUSTER: EVENT']/triggered_effect/requirement[@name='RandomRoll']/@value">@$sorceryChampionSpawnChance</set>

    <append xpath="//buff[@name='event_FallenBossSpawnTimed']/effect_group[@name='EVENT']">
        <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$sorceryChampionSpawnChance" operation="set" value="1"/>
    </append>
</Vux>